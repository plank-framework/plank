{
  "name": "@plank/cli",
  "version": "0.1.0",
  "description": "Plank CLI for creating and managing Plank applications",
  "type": "module",
  "bin": {
    "plank": "./dist/cli.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "lint": "biome lint .",
    "lint:fix": "biome check --write .",
    "format": "biome format .",
    "format:fix": "biome check --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "commander": "^14.0.1",
    "@plank/dev-server": "workspace:*",
    "@plank/router": "workspace:*",
    "@plank/compiler": "workspace:*",
    "@plank/ssr": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^24.6.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
