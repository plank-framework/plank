{
  "name": "plank",
  "version": "0.1.0",
  "description": "A reactive, HTML-first frontend framework that ships near-zero JavaScript by default",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "test:run": "turbo run test:run",
    "test:coverage": "turbo run test:coverage",
    "test:coverage:ui": "turbo run test:coverage:ui",
    "lint": "turbo run lint",
    "lint:fix": "turbo run check:fix",
    "format": "turbo run format",
    "format:fix": "turbo run check:fix",
    "check": "turbo run check",
    "check:fix": "turbo run check:fix",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "changeset publish"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@changesets/cli": "^2.29.7",
    "@types/node": "^24.6.2",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.2.3",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "workspaces": [
    "packages/*"
  ],
  "pnpm": {
    "overrides": {
      "esbuild": ">=0.25.0"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "biome check --write"
    ],
    "*.{json,md,yml,yaml}": [
      "biome format --write"
    ]
  }
}
