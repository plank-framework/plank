{
  "name": "@plank/dev-server",
  "version": "0.1.0",
  "description": "Development server with Vite plugin and HMR for Plank applications",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "lint": "biome lint .",
    "lint:fix": "biome check --write .",
    "format": "biome format .",
    "format:fix": "biome check --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:coverage:ui": "vitest run --coverage --ui"
  },
  "dependencies": {
    "@plank/compiler": "workspace:*",
    "@plank/router": "workspace:*",
    "@plank/ssr": "workspace:*",
    "vite": "^7.1.7"
  },
  "devDependencies": {},
  "publishConfig": {
    "access": "public"
  }
}
