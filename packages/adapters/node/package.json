{
  "name": "@plank/adapter-node",
  "version": "0.1.0",
  "description": "Node.js 20+ production adapter for Plank framework",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "lint": "biome lint .",
    "lint:fix": "biome check --write .",
    "format": "biome format .",
    "format:fix": "biome check --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:coverage:ui": "vitest run --coverage --ui"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "plank",
    "node",
    "adapter",
    "server",
    "production"
  ],
  "author": "Plank Framework",
  "license": "Apache-2.0",
  "dependencies": {
    "@plank/router": "workspace:*",
    "@plank/ssr": "workspace:*"
  }
}
